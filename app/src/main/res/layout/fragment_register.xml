<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_gravity="center_horizontal"
            android:contentDescription="@string/whatgoeshere"
            android:src="@drawable/logoo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Who's There"
            android:padding="10dp"
            android:gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="@string/register_title"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline" />


        <EditText
            android:id="@+id/user_fname"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/user_fname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/user_uname"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/user_uname"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/user_email"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/user_email"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/user_cpassword"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/user_cpassword"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/user_password"
            android:layout_marginLeft="65dp"
            android:layout_marginRight="65dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:hint="@string/user_password"
            android:inputType="textPassword" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal">

            <Button
                android:id="@+id/register_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/register" />

            <Button
                android:id="@+id/back_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="@string/back" />

        </LinearLayout>

        <TextView
            android:id="@+id/register_error_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/register_error"
            android:gravity="center"
            android:textColor="@android:color/holo_red_dark"
            android:visibility="invisible"
            tools:text="Error: User/Password entered does not exist"
            tools:visibility="visible"
            android:textSize="15sp"
            android:padding="20dp"/>

    </LinearLayout>


</FrameLayout>